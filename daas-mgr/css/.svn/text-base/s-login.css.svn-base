.bg{
	position: fixed;
	left: 50%;
	top: 50%;
	margin-left: -960px;
	margin-top: -487px;
}
.video-player{background-color: transparent;display: block;position: absolute;z-index: 1;top:0;}
.video_mask{ width:100%; height:100%; position:absolute; left:0; top:0; z-index:90; background-color:rgba(23,104,212,0.1); }
.login{
	height: 272px;
    width: 400px;
    padding: 40px;
    background-color: rgba(255,255,255,0.8);
    border-radius: 4px;
    position: absolute;
    left: 50%;
    top: 50%;
    margin: -220px 0 0 -240px;
    z-index: 99;
    box-shadow: 0 2px 6px #204f8c;
}
.login h1{ 
	text-align:center; 
	color:#1768d4; 
	font-size:28px; 
	margin-bottom:20px; 
	letter-spacing: 4px;
}
.form_code{ position:relative; }
.form_code .code{ position:absolute; right:0; top:1px; cursor:pointer; }
.login_btn{ width:100%; background-color:#57c294;
/*绿色 #57c294  橙色 #fba74d  蓝色 #51b9ff*/
}

.float-left{float:left;}
.float-right{float:right;}
.clearfix{ clear:both;}
.identify{width:65%;}
.login_box{margin:0 20px 20px 20px;}
.get-code{width:28%; line-height: 38px; color: #555;}
.s-border{
	border: 1px solid #b4b4b4;
}
